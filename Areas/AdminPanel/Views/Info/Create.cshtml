
@model CreateVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create form</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="title">Enter your title</label>
                        <input type="text" asp-for="title" class="form-control" placeholder="Title">
                        <span class="text-danger" style="color:red;" asp-validation-for="title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="author" >Enter your author</label>
                        <input type="text" asp-for="author" class="form-control" placeholder="Author Name">
                        <span class="text-danger" style="color:red;" asp-validation-for="author"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="imageFile">Choose your image</label>
                        <input type="file" asp-for="imageFile" class="form-control" placeholder="Image">
                        <span class="text-danger" style="color:red;" asp-validation-for="imageFile"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2" asp-action="Create" asp-controller="Info">Submit</button>
                    <a class="btn btn-light" asp-action="Index" asp-controller="Info">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>