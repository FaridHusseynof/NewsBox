@model IEnumerable<Info>
@{
	int count = 1;
}

<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Info table</h4>
				<a class="btn btn-primary" asp-action="Create" asp-controller="Info">Create</a>
				<div class="table-responsive pt-3">
					<table class="table table-dark">
						<thead>
							<tr>
								<th>
									Count
								</th>
								<th>
									Title
								</th>
								<th>
									Author
								</th>
								<th>
									Image
								</th>
								<th>
									Settings
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@count
									</td>
									<td>
										@item.Title
									</td>
									<td>
										@item.Author
									</td>
									<td>
										<img src="~/img/@item.ImageURL" alt="infoCard">
									</td>
									<td>
										<a class="btn btn-warning" asp-action="Update" asp-controller="Info" asp-route-id="@item.Id">Update</a>
										<a class="btn btn-danger" asp-action="Delete" asp-controller="Info" asp-route-id="@item.Id">Delete</a>
									</td>
								</tr>
								count++;
							}
							

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>